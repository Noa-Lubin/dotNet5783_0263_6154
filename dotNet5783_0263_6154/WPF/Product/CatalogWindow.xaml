<Window x:Class="PL.Product.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Product"
        mc:Ignorable="d"
         DataContext="{Binding Path=_productsItemList, RelativeSource={RelativeSource Mode=Self}}"

        Title="CatalogWindow" Height="1000" Width="800">
    
    <Window.Resources>
        <DataTemplate x:Key="MyTemplate" DataType="local:ProductItem">

            <Grid x:Name="MainGrid" >

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition  Width="*"/>
                    <ColumnDefinition  Width="*"/>
                    <ColumnDefinition  Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding Path=IdProduct}" />
                <TextBlock Grid.Column="1" Text="{Binding Path=Name}" />
                <TextBlock Grid.Column="2" Text="{Binding Path=Price}" />
                <TextBlock Grid.Column="3" Text="{Binding Path=Category}" />
                <CheckBox Grid.Column="4" IsChecked="{Binding Path=InStock}" />
                <TextBlock Grid.Column="5" Text="{Binding Path=Amount}" />
                <Button Grid.Column="6" Content="Add" Click="Button_Click" />
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <StackPanel Margin="0,0,0,0">
        <ListBox x:Name="ProductItemsListview" ItemsSource="{Binding}" ItemTemplate="{StaticResource MyTemplate}"  HorizontalContentAlignment="Stretch" MouseDoubleClick="ProductItemsListview_MouseDoubleClick"/>
        <Label Content="קטגוריה" Margin="350,0,0,0"  Foreground="#FFE52865" FontSize="20"  FontFamily="BN Cloud"/>
        <ComboBox Name="CategorySelector"  Background="#FFE52865" Width="200" RenderTransformOrigin="0.888,-0.844" SelectionChanged="CategorySelector_SelectionChanged"/>
        <Button x:Name="btnCart" Background="#FFE52865" Margin="0,20,0,0" Height="27" Content="לסל הקניות" FontFamily="BN Cloud" BorderThickness="2" Click="btnCart_Click"/>

    </StackPanel>
</Window>
